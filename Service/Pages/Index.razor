@page "/"

<PageTitle>Branch Lifespan</PageTitle>

@using github_branch_lifetime.Data
@inject BranchLifespanService BranchLifespanService

<h1>Average Branch Lifespan</h1>

<h2>Immoscout24 Branch Lifespan</h2>

<br/>
<div class="row">
  <div class="col-sm-2">
      <Card Title = "Ave. Lifespan Total" Text=@model?.AverageBranchLifespanInDaysTotal.ToString("0.####") />
    </div>
  <div class="col-sm-2">
      <Card  Title = "Ave. Lifespan last 3 Mt." Text=@model?.AverageBranchLifespanInDaysLast3Months.ToString("0.####") />
    </div>
</div>
<br/>

@if(model == null)
{
    <p><em>Loading...</em></p>
}
else if(model.Branches.Count == 0)
{
    <p><em>No branches exist...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Branch Name</th>
                <th>CreatedAt</th>   
                <th>MergedAt</th>          
                <th>Branch age (in days)</th>          
                <th># of commits</th>
                <th>Additions</th>
                <th>Deletions</th>
                <th>Changed files</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var branch in model.Branches)
            {
                <tr>
                    <td>@branch.Name</td>                    
                    <td>@branch.CreatedAt</td>                    
                    <td>@branch.MergedAt</td>
                    <td>@branch.AgeInDays.ToString("0.####")</td>
                    <td>@branch.NrOfCommits</td>
                    <td>@branch.Additions</td>                    
                    <td>@branch.Deletions</td>                    
                    <td>@branch.ChangedFiles</td>                    
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private BranchViewModel? model = new BranchViewModel{Branches = new List<Branch>{new Branch{AgeInDays=0.000613445641}}, AverageBranchLifespanInDaysLast3Months = 1, AverageBranchLifespanInDaysTotal = 0.5};

    protected override async Task OnInitializedAsync()
    {
        model = await BranchLifespanService.GetCurrentBranchLifespan();
    }
}