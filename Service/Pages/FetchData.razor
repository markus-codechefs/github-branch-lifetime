@page "/fetchdata"

<PageTitle>Branch Lifespan</PageTitle>

@using github_branch_lifetime.Data
@inject BranchLifespanService BranchLifespanService

<h1>Average Branch Lifespan</h1>

<p>Immoscout24 Branch Lifespan</p>

@if (data == null || data.Count == 0)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Branch Name</th>
                <th>Branch first commit on</th>
                <th>PR MergedAt</th>                
            </tr>
        </thead>
        <tbody>
            @foreach (var pr in data)
            {
                <tr>
                    <td>@pr.Head.Ref</td>
                    <td>@pr.Head.Sha</td>
                    <td>@pr.MergedAt.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Root>? data;

    protected override async Task OnInitializedAsync()
    {
        data = await BranchLifespanService.GetCurrentBranchLifespan();
    }
}
