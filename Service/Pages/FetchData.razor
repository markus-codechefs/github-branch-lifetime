@page "/fetchdata"

<PageTitle>Branch Lifespan</PageTitle>

@using github_branch_lifetime.Data
@inject BranchLifespanService BranchLifespanService

<h1>Average Branch Lifespan</h1>

<p>Immoscout24 Branch Lifespan</p>

@if (model.Branches.Count == 0)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Branch Name</th>
                <th>MergedAt</th>                
            </tr>
        </thead>
        <tbody>
            @foreach (var branch in model.Branches)
            {
                <tr>
                    <td>@branch.Name</td>                    
                    <td>@branch.CreatedAt</td>                    
                    <td>@branch.MergedAt</td>
                    <td>@branch.NrOfCommits</td>
                    <td>@branch.NrOfLinesChanged</td>                    
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private BranchViewModel model;

    protected override async Task OnInitializedAsync()
    {
        model = await BranchLifespanService.GetCurrentBranchLifespan();
    }
}